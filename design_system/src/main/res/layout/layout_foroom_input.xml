<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="@style/jostText1Regular"
        android:textColor="@color/foroom_white"
        android:background="@drawable/background_rounded_8dp"
        android:backgroundTint="@color/foroom_layer_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textAppearance="@style/jostSmallTextRegular"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

</LinearLayout>